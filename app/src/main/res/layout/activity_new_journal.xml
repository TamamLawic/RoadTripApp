<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewJournalActivity">

    <ImageButton
        android:id="@+id/btnBackJournal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/outline_arrow_back_ios_24"
        android:backgroundTint="#000000" />

    <TextView
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="105dp"
        android:layout_marginTop="13dp"
        android:layout_toEndOf="@+id/btnBackJournal"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="@font/caveat"
        android:text="New Journal "
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="normal" />

    <ImageButton
        android:id="@+id/btnPostJournal"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/etJournal"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/outline_done_24"
        android:text="Post"
        android:textSize="13sp" />

    <EditText
        android:id="@+id/etTitle"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@+id/btnPostJournal"
        android:fontFamily="@font/oswald_light"
        android:textSize="24sp"
        android:hint="Title" />

    <EditText
        android:id="@+id/etJournal"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etTitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="12dp"
        android:fontFamily="@font/caveat"
        android:hint="Whats happening?"
        android:textSize="24sp" />
</RelativeLayout>